{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}

    <h1>{{ controller_name }}</h1>

    <h2>{{ user.name }} {{ user.surname }}, {{ user.age }}</h2>
    <p><small>{{ date }}</small></p>

    <ul>
        {% for book in books %}
            <li>{{ book }}</li>
        {% endfor %}
    </ul>

{% endblock %}
