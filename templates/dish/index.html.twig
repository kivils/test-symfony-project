{% extends 'base.html.twig' %}

{% block title %}Our Dishes{% endblock %}

{% block body %}

    <h1>Our Dishes</h1>
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
    <div class="alert alert-error">
        {{ message }}
    </div>
    {% endfor %}

    <p><a href="{{ path('dishes.add') }}">Add a new dish</a></p>
    <section class="py-5">
        <div class="row gx-4 gx-lg-5">
            {% for dish in dishes %}
                <div class="col col-6 col-md-4 mb-5">
                    <div class="card h-100">
                        <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                        <div class="card-body p-4">
                            <div class="text-center">
                                <h2 class="fw-bolder">{{ dish.title }}</h2>
                                <div>{{ dish.description }}</div>
                                <p>â‚¬ {{ dish.price }}</p>
                            </div>
                        </div>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto" href="{{ path('dishes.add') }}">Details</a>
                                <a class="btn btn-outline-dark mt-auto" href="{{ path('dishes.add') }}">Edit</a>
                                <a class="btn btn-outline-dark mt-auto" href="{{ path('dishes.delete', { id: dish.id }) }}">Remove</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
